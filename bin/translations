#!/usr/bin/env node

"use strict";
var cli = require('../cli');
var program = require('commander');

program
  .version(require('../package.json').version)
  .usage('<source> <target>')
  .parse(process.argv);

try {
  cli.apply(cli, program.args);
} catch(e) {
  console.log(e.message);
  process.exit(1);
}
